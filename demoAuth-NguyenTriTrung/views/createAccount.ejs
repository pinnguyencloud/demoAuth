        <label>Email</label>
      </div>
      <div class="input-field">
        <input type="password" name="password" required />
        <label>Mật khẩu</label>
      </div>
      <div class="input-field">
        <input type="number" name="zipCode" required />
        <label>zip code</label>
      </div>
